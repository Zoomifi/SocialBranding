
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0E0E0"
    tools:context=".MerchantTestActivity">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#007833">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:text="Social Branding"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/textexplain"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Check to add logo to receipts"
                android:textColor="@color/primary_material_dark"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="220dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:text="(You can select up to 4 icons to print on the receipts)"
                android:textColor="@color/primary_material_dark"
                android:textSize="16sp"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:text="Add a personal message to the logo"
            android:textColor="@color/primary_material_dark"
            android:textSize="16sp"
            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/mySwitch"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="Activate:"
                android:textColor="@color/primary_material_dark"
                android:textSize="16sp"
                />
            <Switch
                android:id="@+id/mySwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:thumb="@drawable/thumb"
                android:track="@drawable/track"
                />

    </RelativeLayout>
    <View android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#000000" />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:drawSelectorOnTop="false"
        android:background="@drawable/state_selector"
        />



</LinearLayout>
